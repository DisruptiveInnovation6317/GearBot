package org.usfirst.frc.team6317.robot.commands;

import edu.wpi.first.wpilibj.command.Command;

import org.usfirst.frc.team6317.robot.Robot;
import org.usfirst.frc.team6317.robot.RobotMap;

/**
 *
 */
public class DriveUntil extends Command {
	double centimetersToTravel;
	
	public DriveUntil(double centimeters) {
		requires(Robot.DriveSubsystem);
		requires(Robot.SensorSubsystem);
		centimetersToTravel = centimeters;
	}

	// Called just before this Command runs the first time
	@Override
	protected void initialize() {
		if (!isFinished()) Robot.DriveSubsystem.drive(0.5);
	}

	@Override
	protected boolean isFinished() {
		return Robot.SensorSubsystem.getDistanceCenti() <= centimetersToTravel;
	}

	// Called once after isFinished returns true
	@Override
	protected void end() {
		Robot.DriveSubsystem.stop();
	}
}
