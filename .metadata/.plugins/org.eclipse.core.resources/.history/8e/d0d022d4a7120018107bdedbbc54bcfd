package org.usfirst.frc.team6317.robot.commands;

import org.usfirst.frc.team6317.robot.Robot;
import org.usfirst.frc.team6317.robot.RobotMap;

import edu.wpi.first.wpilibj.command.Command;

public class TurnFor extends Command {

	// Called just before this Command runs the first time
	@Override
	protected void initialize() {
		RobotMap.LEFT_DRIVE_ONE.setInverted(true);
		RobotMap.LEFT_DRIVE_TWO.setInverted(true);
	}

	// Called repeatedly when this Command is scheduled to run
	@Override
	protected void execute() {
		RobotMap.LEFT_DRIVE_ONE.set(-0.5);
		RobotMap.LEFT_DRIVE_TWO.set(-0.5);
		RobotMap.RIGHT_DRIVE_ONE.set(0.5);
		RobotMap.RIGHT_DRIVE_TWO.set(0.5);
	}

	// Make this return true when this Command no longer needs to run execute()
	@Override
	protected boolean isFinished() {
		return false;
	}

	// Called once after isFinished returns true
	@Override
	protected void end() {
		RobotMap.LEFT_DRIVE_ONE.set(0);
		RobotMap.LEFT_DRIVE_TWO.set(0);
		RobotMap.RIGHT_DRIVE_ONE.set(0);
		RobotMap.RIGHT_DRIVE_TWO.set(0);
	}
}
